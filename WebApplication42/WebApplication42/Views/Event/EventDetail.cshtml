@model WebApplication42.Models.EventDetails

@{
    ViewBag.Title = "EventDetail";
}

<h2>EventDetail</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>EventDetails</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <table>
            <tr>
                <th style="text-align:left ! important" colspan="2">
                    <font size="5"> Event : @Model.evelocal.Description</font>
                </th>
            </tr>
            <tr>
                <td style="padding-right:100px !important ">
                    <table class="table-bordered">
                        <tr>
                            <th style="text-align:center ! important" colspan="4">Volunteers</th>
                        </tr>
                        <tr>
                            <th>ResourceID</th>
                            <th>Amount</th>
                            <th>Description</th>
                            <th>Delivered</th>

                        </tr>
                        @foreach (var item in Model.volunteers)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.resourcetype.Description)<br />
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Amount)<br />
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Description)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Delivered)
                                </td>
                            </tr>
                        }
                    </table>
                </td>
                <td>
                    <table class="table-bordered">
                        <tr>
                            <th style="text-align:center ! important" colspan="4">Requests</th>
                        </tr>
                        <tr>
                            <th>ResourceID</th>
                            <th>Amount</th>
                            <th>Description</th>
                            <th>Delivered</th>

                        </tr>
                        @foreach (var item in Model.requests)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.resourcetype.Description)<br />
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Amount)<br />
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Description)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Delivered)
                                </td>
                            </tr>
                        }
                    </table>

                </td>
            </tr>
        </table>
        <table>
            <tr>
                <td>
                    <div class="form-group">
                        @Html.LabelFor(model => model.resourceList, htmlAttributes: new { @class = "control-label col-md-2" })
                    </div>
                </td>
                <td>
                    <div class="col-md-10">
                        @Html.DropDownListFor(m => m.resourceID, Model.resourceList)
                    </div>
                </td>
                <td></td>
            </tr>
        </table>


        @Html.HiddenFor(x => x.evelocal)
        @Html.HiddenFor(x => x.eventID)

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Assign" class="btn btn-default" />
            </div>
        </div>
    </div>
}


    <h1>@ViewBag.m</h1>


<div>
    @Html.ActionLink("Back to List", "Index")
</div>












